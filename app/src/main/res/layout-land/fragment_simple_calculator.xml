<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="5"
    tools:context="com.lukeponiatowski.calculator.SimpleCalculator"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/orange"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="Clear"
        android:text="C"
        android:textSize="22dp" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/orange"
        android:backgroundTintMode="multiply"
        android:foreground="@android:drawable/ic_input_delete"
        android:foregroundGravity="center"
        android:foregroundTint="@color/black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="Backspace"
        android:text=""
        android:textSize="22dp" />

    <Button
        android:id="@+id/exponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="^"
        android:textSize="22dp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="/"
        android:textSize="22dp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="7"
        android:textSize="22dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="8"
        android:textSize="22dp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="9"
        android:textSize="22dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="*"
        android:textSize="22dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="4"
        android:textSize="22dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="5"
        android:textSize="22dp" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="6"
        android:textSize="22dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="-"
        android:textSize="22dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="1"
        android:textSize="22dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="2"
        android:textSize="22dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="3"
        android:textSize="22dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="+"
        android:textSize="22dp" />

    <Button
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="."
        android:textSize="22dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onClickInput"
        android:text="0"
        android:textSize="22dp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@drawable/value_button"
        android:backgroundTint="@color/orange"
        android:backgroundTintMode="multiply"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="Calculate"
        android:text="="
        android:textSize="22dp" />

</GridLayout>
